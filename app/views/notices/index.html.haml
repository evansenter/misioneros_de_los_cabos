%h1
  Notices
  %small Messages from the HOA
  
.row
  .col-md-8.col-md-offset-2
    = render partial: "notice", collection: @notices
  
    .row
      .col-md-10
        = paginate @notices
      - if admin_signed_in?
        .col-md-2
          = link_to("New notice", new_notice_path, class: "btn btn-success top-buffer")