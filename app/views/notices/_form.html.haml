= form_for(@notice, html: { class: "form-horizontal" }) do |form|    
  .form-group{ class: (@notice.errors[:title].present? ? "has-error" : "") }
    = form.label :title, "Title", class: "col-sm-2 control-label"
    .col-sm-10
      = form.text_field :title, class: "form-control required", placeholder: "Title..."

  .form-group{ class: (@notice.errors[:body].present? ? "has-error" : "") }
    = form.label :body, "Content", class: "col-sm-2 control-label"
    .col-sm-10
      = form.text_area :body, class: "form-control required", placeholder: "Description...", rows: 10

  .form-group
    .col-sm-10.col-sm-offset-2
      = form.submit form_button, id: "notice_form_button", class: "btn btn-success"
      